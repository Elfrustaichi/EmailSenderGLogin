@model Author


<div class="row justify-content-center">

    <div class="col-md-8">
        <h1>Create Author</h1>
        <form asp-action="create" method="post">
            <div class="form-group">
                <label asp-for="FullName">FullName</label>
                <input type="text" class="form-control" asp-for="FullName">
          
            </div>
            <div class="form-group">
                <label asp-for="Image">Images</label>
                <input class="form-control" asp-for="Image">
                <span class="text-danger" asp-validation-for="Image"></span>
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>
@section Scripts{
    @Html.Partial("_ValidationScriptsPartial")
}

